<Window x:Class="BulkCarrierShipApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BulkCarrierShipApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Viewbox Stretch="Uniform" Grid.Row="0">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel x:Name="ShipPanel" Orientation="Horizontal">
                    <Image Source="/img/stern.jpg" Margin="0" Height="84" Width="77"/>
                    <Image x:Name="MidSection" Source="/img/mid.jpg" Margin="0" Height="100" Width="100"/>
                    <Image Source="/img/bow.jpg" Margin="0" Height="100" Width="150"/>
                </StackPanel>
            </StackPanel>
        </Viewbox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Margin="90">
            <Button Content="+" Click="AddSection" Margin="5" />
            <Button Content="-" Click="RemoveSection" Margin="5"/>
            <Button Content="Print" Click="PrintShipLayout" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
