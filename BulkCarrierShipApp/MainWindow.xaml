<Window x:Class="BulkCarrierShipApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BulkCarrierShipApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel x:Name="ShipPanel" Orientation="Horizontal">
                <Image Source="/img/stern.jpg" Margin="0" Height="84" Width="77"/>
                <Image x:Name="MidSection" Source="/img/mid.jpg" Margin="0" Height="100" Width="100"/>
                <Image Source="/img/bow.jpg" Margin="0" Height="100" Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="+" Click="AddSection" Margin="5"/>
                <Button Content="-" Click="RemoveSection" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
